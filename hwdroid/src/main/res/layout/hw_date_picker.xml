<!-- Layout of date picker -->

<!--
     Warning: everything within the "pickers" layout is removed and re-ordered
     depending on the date format selected by the user.
--><!--
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:orientation="horizontal" >

   <LinearLayout
        android:id="@+id/pickers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dip"
        android:layout_marginEnd="0dip"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >


        <NumberPicker
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dip"
            android:layout_marginStart="0dip"
            android:layout_marginEnd="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="16dip"
            android:focusable="true"
            android:focusableInTouchMode="true" />


        <NumberPicker
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dip"
            android:layout_marginStart="0dip"
            android:layout_marginEnd="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="16dip"
            android:focusable="true"
            android:focusableInTouchMode="true" />


        <NumberPicker
            android:id="@+id/year"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dip"
            android:layout_marginStart="0dip"
            android:layout_marginEnd="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="16dip"
            android:focusable="true"
            android:focusableInTouchMode="true" />

    </LinearLayout>


    <CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="245dip"
        android:layout_height="280dip"
        android:layout_marginStart="0dip"
        android:layout_marginEnd="0dip"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true" />

</LinearLayout>

-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@*android:id/pickers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dip"
        android:layout_marginEnd="0dip"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">


        <NumberPicker
            android:id="@*android:id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dip"
            android:layout_marginStart="0dip"
            android:layout_marginEnd="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="16dip"
            android:focusable="true"
            android:focusableInTouchMode="true" />


        <NumberPicker
            android:id="@*android:id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dip"
            android:layout_marginStart="0dip"
            android:layout_marginEnd="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="16dip"
            android:focusable="true"
            android:focusableInTouchMode="true" />


        <NumberPicker
            android:id="@*android:id/year"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dip"
            android:layout_marginStart="0dip"
            android:layout_marginEnd="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="16dip"
            android:focusable="true"
            android:focusableInTouchMode="true" />

    </LinearLayout>


    <CalendarView
        android:id="@*android:id/calendar_view"
        android:layout_width="245dip"
        android:layout_height="280dip"
        android:layout_marginStart="0dip"
        android:layout_marginEnd="0dip"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true" />

</LinearLayout>
